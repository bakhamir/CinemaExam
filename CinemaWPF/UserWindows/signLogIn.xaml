<Window x:Class="CinemaWPF.signLogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CinemaWPF"
        mc:Ignorable="d"
        Title="signLogIn" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/exbg.jpg"/>
        </Grid.Background>
        <Label x:Name="welcome" Content="Добро пожаловать username !" HorizontalAlignment="Left" Height="22" Margin="23,23,0,0" VerticalAlignment="Top" Width="470" FontFamily="Calibri" FontStyle="Italic"/>
        <Button Content="Admin panel" HorizontalAlignment="Left" Height="49" Margin="553,34,0,0" VerticalAlignment="Top" Width="227" Click="Button_Click"/>
        <DataGrid HorizontalAlignment="Left" Height="161" Margin="31,107,0,0" VerticalAlignment="Top" Width="369" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataGrid_SelectionChanged"/>

    </Grid>
</Window>
