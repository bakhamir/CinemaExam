<Window x:Class="CinemaWPF.BuyTicket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CinemaWPF"
        mc:Ignorable="d"
        Title="BuyTicket" Height="150" Width="200">
    <Grid Background="#FF15FF01">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="67*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="welcome" Content="Welcome" HorizontalAlignment="Left" Height="32" Margin="10,10,0,0" VerticalAlignment="Top" Width="176" Grid.ColumnSpan="2"/>
        <Button Content="no" HorizontalAlignment="Left" Height="48" Margin="15,70,0,0" VerticalAlignment="Top" Width="55" Click="Button_Click_1"/>
        <Button Content="yes" HorizontalAlignment="Left" Height="48" Margin="2,70,0,0" VerticalAlignment="Top" Width="55" Grid.Column="1" Click="Button_Click"/>
        <Label x:Name="info" Content="Label" HorizontalAlignment="Left" Height="28" Margin="10,42,0,0" VerticalAlignment="Top" Width="176" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
